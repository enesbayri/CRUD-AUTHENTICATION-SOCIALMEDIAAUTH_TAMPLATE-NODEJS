
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Yeniden Hoşgeldiniz</h1>
                                    <p class="mb-4">Yeni şifrenizi giriniz!</p>
                                </div>
                                <form class="user" action="/passwordverify" method="post">
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user"
                                            minlength="3" maxlength="30"
                                            name="sifre"
                                            id="exampleInputPassword" placeholder="Yeni şifrenizi giriniz!">
                                    </div>
                                    <div class="form-group">
                                        <input style="display: none;" type="text" class="form-control form-control-user"
                                            name="token" value=<%-token %>
                                            id="exampleInputPassword">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Şifreyi Yenile
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="/register">Hesap Oluştur!</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="/login">Hesabınız var mı? Giriş yapın!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>