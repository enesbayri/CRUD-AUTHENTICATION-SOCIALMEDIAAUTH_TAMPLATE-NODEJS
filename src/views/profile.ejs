<div class="wrapper bg-white mt-sm-5">
    <form action="/yonetim/profil-guncelle" method="post" enctype="multipart/form-data">
        <h4 class="pb-4 border-bottom">Account settings</h4>
        <div class="d-flex align-items-start py-3 border-bottom">
            <img src=<%=user.avatar %>
                class="img" alt="" style="max-width: 470px;max: height 200px;;">
            <div class="pl-sm-4 pl-2" id="img-section">
                <b>Profil Fotoğrafı</b><br>
                <input name="resim" type="file" class="btn button border"></input>
            </div>
        </div>
        <div class="py-2">
            <div class="row py-2">
                <div class="col-md-6">
                    <label for="adınız">ad</label>
                    <input type="text" name="ad" class="bg-light form-control" placeholder="adınız" value=<%-user.ad %>>
                </div>
                <div class="col-md-6 pt-md-0 pt-3">
                    <label for="soyadınız">soyad</label>
                    <input type="text" name="soyad" class="bg-light form-control" placeholder="soyadınız" value=<%-user.soyad %>>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-md-6">
                    <label for="email">E-mail</label>
                    <input type="text" name="email" class="bg-light form-control" readonly="readonly" value=<%-user.email %>>
                </div>
            </div>
            <div class="py-3 pb-4 border-bottom">
                <button type="submit" class="btn btn-primary mr-3">Değişikliği KAYDET</button>
                <button class="btn border button">Cancel</button>
        </div>
    </form>
    
        <div class="d-sm-flex align-items-center pt-3" id="deactivate">
            <div>
                <b>Deactivate your account</b>
                <p>Details about your company account and password</p>
            </div>
            <div class="ml-auto">
                <button class="btn danger">Deactivate</button>
            </div>
        </div>
    </div>
</div>